rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Subcollections
      match /medications/{medicationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        // Allow caregivers read access
        allow read: if request.auth != null &&
          exists(/databases/$(database)/documents/caregiverAccess/$(request.auth.uid)/patients/$(userId));
      }

      match /schedules/{scheduleId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null &&
          exists(/databases/$(database)/documents/caregiverAccess/$(request.auth.uid)/patients/$(userId));
      }

      match /reminders/{reminderId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null &&
          exists(/databases/$(database)/documents/caregiverAccess/$(request.auth.uid)/patients/$(userId));
      }

      match /adherenceRecords/{recordId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null &&
          exists(/databases/$(database)/documents/caregiverAccess/$(request.auth.uid)/patients/$(userId));
      }

      match /caregiverLinks/{linkId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Caregiver access documents
    match /caregiverAccess/{caregiverId}/patients/{patientId} {
      allow read: if request.auth != null && request.auth.uid == caregiverId;
      // Only Cloud Functions can write to this
      allow write: if false;
    }

    // Invites - readable by anyone with the code, writable only by Cloud Functions
    match /invites/{inviteCode} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
